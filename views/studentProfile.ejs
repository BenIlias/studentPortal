<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        * {
            margin: 0;
        }

        .topnav {
            background-color: #333;
            overflow: hidden;
        }

        /* Style the links inside the navigation bar */
        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        /* Change the color of links on hover */
        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        /* Add a color to the active/current link */
        .topnav a.active {
            background-color: #04AA6D;
            color: white;
        }

        .inputW {
            width: 15%;
        }
    </style>
</head>

<body>
    <img src='Student-Portal-logo-v.png' height="50">
    <div class="topnav">
        <a class="active" href="homeE">Home</a>
        <a href="myenrollement">My Enrollements</a>
        <a href="studentProfile">Student Profile</a>
        <a href="graduation">Graduation</a>
        <a href="loginFrm">Sign Out</a>

    </div><br><br>
    <form action="/studentProfile" method="post">
        <div class="form-group">
            <label for="userName">User Name</label>
            <input type="text" class="form-control inputW userInpt" name="userName" id="userName" value="<%= sendUser.userName %>" disabled>
            <label for="emailAddress">Email Address</label>
            <input type="email" class="form-control inputW emailInpt" name="emailAddress" id="emailAddress" value="<%= sendUser.emailAddress %>" disabled>
            <span><label>Student ID : </label></span><span class="idStudent"><%= sendUser.idStudent %></span>
            <br><br>
            <input type="checkbox" class="form-check-input checkbox" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Click here to edit</label>
        </div>
       
        <button type="submit" class="btn btn-primary" disabled>Save changes</button>
    </form>

    <script>
        const userInpt = document.querySelector('.userInpt');
        const emailInpt = document.querySelector('.emailInpt')
        const btn = document.querySelector('button');
        const inputW = document.querySelectorAll('.inputW');
        const checkbox = document.querySelector('.checkbox');

        userInpt.addEventListener('keyup', () => {
            if((userInpt.value.length === 0)  || (emailInpt.value.length === 0)){
            btn.disabled = true;
            } else {
            btn.disabled = false;
            }
        });

        emailInpt.addEventListener('keyup', () => {
            if((emailInpt.value.length === 0) || (userInpt.value.length === 0)){
            btn.disabled = true;
            } else {
            btn.disabled = false;
            }
        });
        
        
        checkbox.addEventListener('change', () => {
            if (checkbox.checked == true) {
            userInpt.disabled = false;
            emailInpt.disabled = false;
            btn.disabled = false;
        } else {

            userInpt.disabled = true;
            emailInpt.disabled = true;
            btn.disabled = true;
            
        }
        })
        
        
        
    </script>



</body>

</html>